package oops;

//MODULE 2 â€“ UNIT 2
//Arrays, Exception Handling, Custom Exception, File I/O Streams

import java.io.*;
import java.util.*;

class InvalidEventException extends Exception {
 public InvalidEventException(String msg) { super(msg); }
}

class EventStorage {
 ArrayList<String> events = new ArrayList<>();

 public void addEvent(String e) throws Exception {
     if (e == null || e.isEmpty())
         throw new InvalidEventException("Event name cannot be empty!");
     events.add(e);
 }

 public void saveToFile() throws Exception {
     FileWriter fw = new FileWriter("events_module2.txt");
     for (String ev : events) fw.write(ev + "\n");
     fw.close();
 }
}

public class mod2 {
 public static void main(String[] args) {
     try {
         EventStorage es = new EventStorage();
         es.addEvent("Conference");
         es.addEvent("Workshop");
         es.saveToFile();
         System.out.println("Events saved to file!");
     } catch (Exception e) {
         System.out.println("ERROR: " + e.getMessage());
     }
 }
}
